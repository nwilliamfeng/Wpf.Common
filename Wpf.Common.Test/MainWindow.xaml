<Window x:Class="Wpf.Common.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Common.Test"
        xmlns:behavior="clr-namespace:Wpf.Common.Behavior;assembly=Wpf.Common"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"  >
    <TabControl>
        <TabItem Header="Drop">
            <local:DropFileView/>
        </TabItem>
        <TabItem Header="HeadeContentControl">
            <local:HeaderContentView Background="AliceBlue" MinWidth="200"/>
        </TabItem>

        <TabItem Header="Brush">
            <local:BrushView />
        </TabItem>

        <TabItem Header="ViewBox">
            <Border>
                <Viewbox    MouseWheel="ViewBox_MouseWheel" Stretch="Uniform">
                    <TextBlock Text="abcd"/>
                </Viewbox>
            </Border>
            
        </TabItem>
        
    </TabControl>
</Window>
