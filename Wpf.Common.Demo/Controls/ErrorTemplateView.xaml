<UserControl x:Class="Wpf.Common.Demo.Controls.ErrorTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Common.Demo.Controls"
             xmlns:behavior="clr-namespace:Wpf.Common.Controls.Behavior;assembly=Wpf.Common.Controls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">


        <TextBox Text="{Binding Name,UpdateSourceTrigger=PropertyChanged,NotifyOnValidationError=True,ValidatesOnDataErrors=True}" 
                     Width="200"
                     
                     Padding="10,5">
            
        </TextBox>
 
       
        
        <TextBox Text="{Binding Age}" Width="200" Padding="10,5" Margin="0,10"/>
    </StackPanel>
</UserControl>
