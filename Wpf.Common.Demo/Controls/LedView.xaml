        <Canvas Width="100" Height="100"  x:Name="canvas">
            <Canvas.Resources>
                <Style TargetType="Line">
                    <Setter Property="Stroke" Value="Green"/>
                    <Setter Property="StrokeThickness" Value="3"/>
