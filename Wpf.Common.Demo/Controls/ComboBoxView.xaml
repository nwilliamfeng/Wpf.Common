<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Common.Demo.Controls"
    
             x:Class="Wpf.Common.Demo.Controls.ComboBoxView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
   
    
    <UniformGrid Columns="1">
        <ComboBox VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10,5" Width="200"  />
        <ComboBox VerticalAlignment="Center" Padding="10,5" HorizontalAlignment="Center" Width="200" IsEditable="True" >
            <ComboBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowFrameBrushKey}"  Color="Red"/>
            </ComboBox.Resources>
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
        </ComboBox>

        <ComboBox VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" IsEditable="True" IsEnabled="False"  />

   

    </UniformGrid>
</UserControl>
