<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:data="clr-namespace:Wpf.Common.Data;assembly=Wpf.Common"
                    xmlns:controlBehavior="clr-namespace:Wpf.Common.Controls.Behavior"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Buttons.xaml"/>
        <ResourceDictionary Source="../Icons.xaml"/>
        <ResourceDictionary Source="../Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <data:PrefixWhiteSpaceConverter x:Key="PrefixWhiteSpaceConverter"/>
    <Grid x:Key="WindowGrid">
        <Border x:Name="GlowBorder" Background="White" BorderThickness="1.2">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="{StaticResource window-border-active-brush}"/> 
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect 
                                ShadowDepth="0"                                             
                                Color="{StaticResource window-border-active-color}" 
                                Opacity="1" 
                                BlurRadius="5" 
                                RenderingBias="Quality"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsActive,RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                             <Setter Property="BorderBrush" Value="{StaticResource window-border-inactive-brush}"/> 
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect 
                                        ShadowDepth="0" 
                                        Color="{StaticResource window-border-inactive-color}" 
                                        Opacity="1"  
                                        RenderingBias="Quality" 
                                        BlurRadius="5"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
        </Border>
        <Border x:Name="WindowBorder" BorderThickness="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--Title-->
                <Border x:Name="titleBorder" >
                    <Grid Background="{Binding Path=(controlBehavior:WindowChromeBehavior.TitleBackground)}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!--标题内容-->
                        <ContentControl x:Name="titleContent" 
                                Content="{Binding Title,RelativeSource={RelativeSource AncestorType=Window},Converter={StaticResource PrefixWhiteSpaceConverter},ConverterParameter=2}"                                                      
                                HorizontalContentAlignment="Left"/>

                        <!--标题命令按钮-->
                        <Grid   Grid.Column="1" VerticalAlignment="Top"  >
                            <Grid.Resources>
                                <Style TargetType="Path" x:Key="basePathStyle">
                                    <Setter Property="Stretch"  Value="Uniform"/>
                                    <Setter Property="Fill" Value="{Binding Path=(controlBehavior:WindowChromeBehavior.TitleForeground),RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive,RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                            <Setter Property="Fill" Value="Gray"/>
                                            <Setter Property="Stroke" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>

                                </Style>
                                <Style x:Key="windowButtonStyle" 
                                       TargetType="Button" 
                                       BasedOn="{StaticResource chromeButtonStyle}">
                                    <Setter Property="Height" Value="28"/>
                                    <Setter Property="Width" Value="45"/>
                                    <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                                </Style>
                                <Style TargetType="Button" 
                                       BasedOn="{StaticResource windowButtonStyle}" 
                                       x:Key="normalButtonStyle">
                                                                 
                                    <Style.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsPressed" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#E5E5E5" />

                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsPressed" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#CACACB" />

                                        </MultiTrigger>
                                        
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="Button" 
                                       BasedOn="{StaticResource windowButtonStyle}"
                                       x:Key="closeButtonStyle">
                                    <Style.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsPressed" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="Red"/>

                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsPressed" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Opacity" Value="0.8" />
                                            <Setter Property="Background" Value="Red"/>
                                        </MultiTrigger>
                                      
                                    </Style.Triggers>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="minimizeButton" UseLayoutRounding="True" Style="{StaticResource normalButtonStyle}" ToolTip="最小化">
                                <Path  Data="{StaticResource MinimizeIcon}" Style="{StaticResource basePathStyle}"  Width="10" Height="1.1" Stretch="Uniform" StrokeThickness="0.2"/>
                            </Button>
                            <Button  x:Name="maximizeButton" UseLayoutRounding="True" Grid.Column="1">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource normalButtonStyle}">
                                        <Setter Property="ToolTip" Value="最大化"/>
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Path  Data="{StaticResource MaximizeIcon}" Style="{StaticResource basePathStyle}"  Width="10" Height="10"   StrokeThickness="0.2"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WindowState,RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                                                <Setter Property="ToolTip" Value="向下还原"/>
                                                <Setter Property="Content" >
                                                    <Setter.Value>
                                                        <Path  Data="{StaticResource RestoreIcon}" Style="{StaticResource basePathStyle}"  Width="10" Height="10"   StrokeThickness="0.2"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                            </Button>
                            <Button UseLayoutRounding="True" Grid.Column="2"   x:Name="closeButton" Style="{StaticResource closeButtonStyle}" ToolTip="关闭">
                                <Path  Data="{StaticResource CloseIcon}"  Width="10" Height="10"  StrokeThickness="0.1">
                                    <Path.Style>
                                        <Style TargetType="Path" BasedOn="{StaticResource  basePathStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver,RelativeSource={RelativeSource AncestorType=Button}}" Value="true">
                                                    <Setter Property="Fill" Value="White" />
                                                    <Setter Property="Stroke" Value="White" />
                                                </DataTrigger>
                                              
                                            </Style.Triggers>
                                        </Style>
                                    </Path.Style>
                                </Path>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>



                <!--Content-->
                <Border Grid.Row="1" x:Name="contentBorder">
                    <ContentControl x:Name="contentControl" />
                </Border>


            </Grid>
        </Border>
    </Grid>
</ResourceDictionary>