<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Colors/Gray.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!--窗体活动状态下的画刷-->
    <SolidColorBrush x:Key="window-active-border-brush" Color="{StaticResource window-active-border-color}"/>

    <!--窗体非活动状态下的画刷-->
    <SolidColorBrush x:Key="window-inactive-border-brush" Color="{StaticResource window-inactive-border-color}"/>

    <!--控件边框画刷-->
    <SolidColorBrush x:Key="control-border-brush" Color="{StaticResource Gray7}"/>

    <!--Watermark字体色-->
    <SolidColorBrush x:Key="WatermarkForeground" Color="{StaticResource Gray5}"/>
    
    <!--处于活动状态下的控件边框画刷-->
    <SolidColorBrush x:Key="control-active-border-brush" Color="{StaticResource control-active-border-color}"/>
</ResourceDictionary>