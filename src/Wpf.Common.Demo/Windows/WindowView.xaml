<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.Common.Demo.Controls"
    xmlns:controls="clr-namespace:Wpf.Common.Controls;assembly=Wpf.Common.Controls"
             xmlns:commonControls="clr-namespace:Wpf.Common.Controls;assembly=Wpf.Common"
            xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:io="clr-namespace:System.IO;assembly=mscorlib"
            xmlns:behaviors="clr-namespace:Wpf.Common.Controls.Behavior;assembly=Wpf.Common.Controls"
             x:Class="Wpf.Common.Demo.Controls.WindowView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  Background="Transparent">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </UserControl.Resources>

     
    <UniformGrid Columns="1">
        <Button Content="Normal Window" x:Name="openNormalWindowBtn" Click="openNormalWindowBtn_Click"   />

        <Button Content="Tool Window" x:Name="openToolWindowBtn" Click="openToolWindowBtn_Click"   />

    </UniformGrid>
</UserControl>
